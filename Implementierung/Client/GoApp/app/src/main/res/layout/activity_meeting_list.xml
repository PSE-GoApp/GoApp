<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.kit.pse.goapp.client.goapp.MeetingListActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededed"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="Termine"
        android:textColor="#387D1A"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#387D1A"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:id="@+id/view" />
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_termine"
        android:layout_marginTop="13dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/menu_button"
        android:background="@null"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heute:"
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:id="@+id/textView_heute"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12:00 \n Mensa"
        android:textSize="22dp"
        android:id="@+id/button_mensa"
        android:background="#ffffff"
        android:textAlignment="textStart"
        android:paddingStart="15dp"
        android:layout_below="@+id/textView_heute"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:src="@drawable/cancel"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:layout_marginTop="8dp"
        />


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/checked"
        android:background="@null"
        android:layout_above="@+id/textView2"
        android:layout_toStartOf="@+id/teilnehmer"
        android:layout_marginRight="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="22:00 \n Agostea"
        android:textSize="22dp"
        android:id="@+id/textView2"
        android:paddingStart="15dp"
        android:layout_below="@+id/button_mensa"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:layout_alignParentEnd="true"
        />

    <ImageButton
        android:id="@+id/teilnehmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/teilnehmer"
        android:background="@null"
        android:layout_alignTop="@+id/map"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/map"
        android:src="@drawable/somemap"
        android:background="@null"
        android:layout_marginRight="12dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toStartOf="@+id/teilnehmer" />
</RelativeLayout>
