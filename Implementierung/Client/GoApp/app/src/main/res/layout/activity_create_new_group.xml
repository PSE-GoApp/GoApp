<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.kit.pse.client.goapp.activity.CreateNewGroupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ededed"
            android:fontFamily="sans-serif-light"
            android:padding="10dp"
            android:text="@string/new_group"
            android:textColor="#387D1A"
            android:textSize="25sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView_settings" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_new_group"
            android:layout_marginTop="13dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/menu_button"
            android:background="@null"
            android:layout_gravity="right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#387D1A"
            android:layout_below="@+id/textView_settings"
            android:layout_alignEnd="@+id/textView_settings"
            android:id="@+id/gruenerStrich" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:height="220dp"
            android:text="Create Group"
            android:id="@+id/button_create_group"
            android:layout_below="@+id/gruenerStrich"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_create_group"
            android:id="@+id/editText_group_name" />
    </RelativeLayout>




    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_added"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#387D1A"
        android:layout_below="@+id/textView_settings"
        android:layout_alignEnd="@+id/textView_settings"
        android:id="@+id/gruenerStrich1" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_users"
        android:layout_weight="2"
        android:layout_alignBottom="@+id/listView"
        android:layout_alignParentStart="true" />

</LinearLayout>
