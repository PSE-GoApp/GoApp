<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededed"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="Go-App"
        android:textColor="#387D1A"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/title_login" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#387D1A"
        android:layout_below="@+id/title_login"
        android:id="@+id/login_line" />
    >

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anmelden mit:"
        android:textSize="30dp"
        android:layout_below="@+id/login_line"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textLogin"
        android:layout_centerHorizontal="true"
        style=""
        />


    <TextView
        android:id="@+id/textRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrieren"
        android:textSize="25dp"
        android:layout_below="@+id/signInButton"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textNewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benutzer Name:"
        android:textSize="20dp"
        android:layout_below="@+id/textRegister"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/tip_NewUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textNewUserName"
        android:layout_alignBaseline="@+id/textNewUserName"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:background="@color/itemBackground"
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textNewUserName"
        android:layout_alignEnd="@+id/signInButton" />

</RelativeLayout>